{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "./types"]
  },
  "include": ["components.d.ts", "example/*", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
